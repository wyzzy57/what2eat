# ===========================
# 应用配置
# ===========================
APP_NAME="What to Eat"
DEBUG=True

# ===========================
# 数据库配置
# ===========================

# 选择数据库类型: postgres 或 sqlite
DB_TYPE=sqlite

# --- PostgreSQL 配置 (DB_TYPE=postgres 时生效) ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=fastapi_users

# 连接池配置 (仅 Postgres 有效)
# --- 必选参数：中等并发常用 ---
POOL_SIZE=20
MAX_OVERFLOW=10
POOL_TIMEOUT=30
POOL_PRE_PING=True

# --- 可选调优参数（高级场景） ---
POOL_RECYCLE=3600
POOL_USE_LIFO=False
ECHO=False

# --- SQLite 配置 (DB_TYPE=sqlite 时生效) ---
SQLITE_DB_PATH=./data/what2eat.sqlite3


# ===========================
# Redis 配置
# ===========================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
AUTH_REDIS_DB=0
CACHE_REDIS_DB=1


# ===========================
# JWT 配置
# ===========================
JWT_SECRET=CHANGE_ME